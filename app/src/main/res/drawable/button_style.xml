<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="3dp" />
            <gradient
                android:angle="90"
                android:startColor="#FF63a34a"
                android:endColor="#FF477b36"
                android:type="linear" />
            <padding
                android:top="25dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#40000000" />
            <padding
                android:top="-25dp"/>
        </shape>
    </item>
</layer-list>